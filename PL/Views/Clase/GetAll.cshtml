@model ML.Clase
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align:center"><strong>Clases</strong></h1>
        </div>
    </div>

    <hr />

    <div>
        @if (Model.Clases != null)
        {
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-responsive table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="visually-hidden">IdClase</th>
                                <th>Nombre</th>
                                <th>Nivel</th>
                                <th>Horario</th>
                                <th>Aula</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (ML.Clase clase in Model.Clases)
                                {
                                    <td class="visually-hidden">@clase.IdClase</td>
                                    <td>@clase.Nombre</td>
                                    <td>@clase.Nivel</td>
                                    <td>@clase.Horario</td>
                                    <td>@clase.Aula</td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>